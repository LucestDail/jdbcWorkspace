<%
	request.setCharacterEncoding("euc-kr");
	String id = (String)session.getAttribute("login");
	Member mem = new MemberDao().selectOne(id);
	String name = "";
	String gender = "";
	String tel = "";
	String email = "";
	String picture = "";
	boolean owner = false;
	if(mem != null){
		if(id.equals(mem.getId()));
		owner = true;
	}
	if(mem != null && (owner || id.equals("admin"))){
		name = mem.getName();
		gender = (mem.getGender() == 1) ? "남" : "여";
		tel = mem.getTel();
		email = mem.getEmail();
		picture = mem.getPicture();
	}
	
%>

<table><caption>회원 정보 보기</caption>
	<tr>
		<td rowspan = "6">
				<img src = "" width="200" height="200" id="picture">
		</td>
		<th> 아이디</th>
		<td><%=id %></td>
	</tr>
	<tr>
		<th> 이름</th>
		<td><%=name %></td>
	</tr>
	<tr>
		<th> 성별</th>
		<td><%=gender %></td>
	</tr>
